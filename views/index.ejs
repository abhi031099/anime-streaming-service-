<!doctype html>
<html lang="en">

<head>
  <!-- Required meta tags -->
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-BmbxuPwQa2lc/FVzBcNJ7UAyJxM6wuqIj61tLrc4wSX0szH/Ev+nYRRuWlolflfl" crossorigin="anonymous">
  <link type="text/css" rel="stylesheet" href="/css/style.css">
  <title>testing?</title>
</head>

<body>
  <nav class="navbar navbar-light bg-light">
    <div class="container-fluid">
      <a class="navbar-brand" href="/">
        <img src="images/logo.jpg" alt="logoo" width="30" height="24" class="d-inline-block align-top">
        INITIAL D
      </a>
    </div>
  </nav>
  <div class="container my-2">
    <!--CAROUSEL-->
    <div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel">
      <div class="carousel-indicators">
        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active"
          aria-current="true" aria-label="Slide 1"></button>
        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1"
          aria-label="Slide 2"></button>
        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2"
          aria-label="Slide 3"></button>
      </div>
      <div class="carousel-inner">
        <div class="carousel-item active ">
          <img src="images/movie1.jpg" class="img-fluid d-block w-100" alt="...">
        </div>
        <div class="carousel-item ">
          <img src="images/movie2.jpg" class="img-fluid d-block w-100" alt="...">
        </div>
        <div class="carousel-item ">
          <img src="images/movie3.jpg" class="img-fluid d-block w-100" alt="...">
        </div>
      </div>
      <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators"
        data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
      </button>
      <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators"
        data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
      </button>
    </div>

    <!--MID IFRAME AND STUFF-->
    <div class="row my-2">
      <div class="col-sm-6 my-2">
        <div class="card bg-dark text-white">
          <img class="card-img" src="images/midele.png" alt="Card image">
          <div class="card-img-overlay">
            <h4 class="card-title">HELLO MY BROTHAS</h4>
            <p class="card-text">This is just me trying to learn, so don't mind me!</p>
          </div>
        </div>
      </div>
      <div class="col-sm-6 d-flex justify-content-center my-2">
        <iframe class="responsive-iframe" src="https://www.youtube.com/embed/V-qMVrCAhxQ" title="Iframe" frameborder="0"
          allowfullscreen></iframe>
      </div>
    </div>
    <!--THUMBNAIL AND STUFF-->
    <section class="d-flex justify-content-center">
      <form class="searchbar">
        <div class="input-group mb-3">
          <input type="text" id="searchbox" class="form-control" placeholder="Search(Make sure to check the spellings or you might not get any results!)" aria-label="Recipient's username" aria-describedby="button-addon2">
          <button class="btn btn-outline-secondary" type="submit" id="button-addon2" >Search</button>
        </div>
      </form>
      
    </section>
    <div class="row d-flex justify-content-center">
      <div class="card my-2 mx-2 border-0" style="width: 18rem;">
        <img class="card-img" src="images/yhumb1.jpg" alt="Card image cap">
        <div class="card-img-overlay">
        </div>
      </div>
      <div class="card my-2 mx-2 border-0" style="width: 18rem;">
        <img class="card-img" src="images/thumb2.jpg" alt="Card image cap">
        <div class="card-img-overlay">
        </div>
      </div>
      <div class="card my-2 mx-2 border-0" style="width: 18rem;">
        <img class="card-img" src="images/thumb3.jpg" alt="Card image cap">
        <div class="card-img-overlay">
        </div>
      </div>
    </div>
    <div class="row d-flex justify-content-center">
      <% data.forEach(function(anime){ %>
      <div class="card my-2 mx-2 border-0" style="width: 18rem;">
        <img class="card-img" src="<%= anime.img %>" alt="Card image cap">
        <div class="card-img-overlay">
          <a href="/animepage/<%=anime.title %>" class="btn btn-primary"><%=anime.title %></a>
        </div>
        
      </div>
      <% }); %>
    </div>
    <h5><%= data %></h5>
  </div>
  <footer class="bg-light text-center text-lg-start">
    <!-- Copyright -->
    <div class="text-center p-3" style="background-color: rgba(0, 0, 0, 0.2)">
      Â© 2020 Copyright:
      <a class="text-dark" href="https://github.com/abhi031099">Abhishek Sharma ;)</a>
    </div>
    <!-- Copyright -->
  </footer>




  <!-- Optional JavaScript; choose one of the two! -->

  <!-- Option 1: Bootstrap Bundle with Popper -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-b5kHyXgcpbZJO/tY9Ul7kGkf1S0CWuKcCD38l8YkeH8z8QjE0GmW1gYU5S9FOnJ0" crossorigin="anonymous">
  </script>
  <script src="https://code.jquery.com/jquery-3.5.1.slim.js" integrity="sha256-DrT5NfxfbHvMHux31Lkhxg42LY6of8TaYyK50jnxRnM=" crossorigin="anonymous"></script>
  <script src="/js/anime.js"></script>
