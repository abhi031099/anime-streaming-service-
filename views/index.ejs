<!doctype html>
<html lang="en">

<head>
  <!-- Required meta tags -->
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-BmbxuPwQa2lc/FVzBcNJ7UAyJxM6wuqIj61tLrc4wSX0szH/Ev+nYRRuWlolflfl" crossorigin="anonymous">
  <link rel="preconnect" href="https://fonts.gstatic.com">
  <link rel="preconnect" href="https://fonts.gstatic.com">
<link href="https://fonts.googleapis.com/css2?family=Potta+One&display=swap" rel="stylesheet">
  <link type="text/css" rel="stylesheet" href="/css/style.css">
  <title>WatchAnimeNow</title>
</head>

<body>
  <!--NAVBAR-->
  <nav class="navbar navbar-expand-lg  bg-dark">
    <div class="container-fluid">
      <a class="navbar-brand " href="/">Sugoi Anime</a>
      <button class="navbar-toggler " type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon "></span>
      </button>
      <div class="collapse navbar-collapse " id="navbarNav">
        <ul class="navbar-nav">
          <li class="nav-item">
            <a class="nav-link" aria-current="page" href="/animelist/0">Anime List</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#">Help</a>
          </li>
        </ul>
      </div>
    </div>
  </nav>
  <div class="container py-2 mainpagecontainer">
    <!--Cover Image-->
    <section id="coverimage">
      <img src="/images/coverimage.jpg">
    </section>
    <!--ALERT-->
    <div class="alert alert-success my-1 py-1 text-center" role="alert">
      Welcome to my WebApp, i hope you like it! If you find any bugs or something, head to the "Help" page. 
    </div>
    <!--SEARCH BAR-->
    <section class="d-flex justify-content-center" name="top">
      <form class="searchbar">
        <div class="input-group my-3">
          <input type="text" id="searchbox" class="form-control"
            placeholder="Search"
            aria-label="Recipient's username" aria-describedby="button-addon2">
          <button class="btn btn-outline-secondary" type="submit" id="button-addon2">Search</button>
        </div>
        <span class="form-text text-white my-1"> Make sure to check the spellings or you might not get any results!(also don't use symbols like '/')</span>
      </form>
    </section>
    <!--CARDS-->
    <div class="row d-flex justify-content-center my-5 ">
      <h3 class="cardheading text-center">TOP ANIMES</h3>
      <% data.forEach(function(anime){ %>
        <div class="card " style="width: 12rem;">
          <img class="card-img-top" src="<%= anime.img %>" alt="Card image cap">
          <div class="card-body text-center">
            <a href="/episodepage/<%=anime.episodes[0].id %>" class="stretched-link"><%=anime.title %></a>
          </div>
        </div>
      <% }); %>
    </div>
    <!-- FOOTER -->
    <footer class="bg-dark  ">   
      <div class="row">
        <section class="col footer-text">
          <div class="text-end p-3">
            <a  href="#">Help!</a>
          </div>
        </section>
        <section class="col footer-icon">
          <a href="#top">
          <img src="/images/footerarrow.png"  class=" rounded-circle float-end my-1">
        </a>
        </section>
      </div>
    </footer>
  </div>





  <!-- Optional JavaScript; choose one of the two! -->

  <!-- Option 1: Bootstrap Bundle with Popper -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-b5kHyXgcpbZJO/tY9Ul7kGkf1S0CWuKcCD38l8YkeH8z8QjE0GmW1gYU5S9FOnJ0" crossorigin="anonymous">
  </script>
  <script src="https://code.jquery.com/jquery-3.5.1.slim.js"
    integrity="sha256-DrT5NfxfbHvMHux31Lkhxg42LY6of8TaYyK50jnxRnM=" crossorigin="anonymous"></script>
  <script src="/js/anime.js"></script>
  <!-- Option 2: Separate Popper and Bootstrap JS -->
  <!--
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.6.0/dist/umd/popper.min.js" integrity="sha384-KsvD1yqQ1/1+IA7gi3P0tyJcT3vR+NdBTt13hSJ2lnve8agRGXTTyNaBYmCR/Nwi" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/js/bootstrap.min.js" integrity="sha384-nsg8ua9HAw1y0W1btsyWgBklPnCUAFLuTMS2G72MMONqmOymq585AcH49TLBQObG" crossorigin="anonymous"></script>
    -->
</body>

</html>